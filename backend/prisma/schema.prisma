generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // <-- DEVE SER "postgresql"
  url      = env("DATABASE_URL") // <-- DEVE LER A VARIÃVEL DE AMBIENTE
}

model Enquete {
  id        Int      @id @default(autoincrement())
  pergunta  String
  opcoes    Opcao[]
}

model Opcao {
  id         Int     @id @default(autoincrement())
  texto      String
  votos      Int     @default(0)
  
  enqueteId  Int
  enquete    Enquete @relation(fields: [enqueteId], references: [id])
}
